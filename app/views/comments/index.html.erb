<% @comments.each do |comment| %>
    <p><%= comment.user.try(:name) || "Undefined" %> 
    :<%= comment.text %></p>
    <% if can? :destroy, comment #current_user.id == comment.user_id %>
    <%= link_to 'Destroy', post_comment_path(comment.post_id, comment.id), method: :delete%>
    <% end %>
<% end %>	